<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guo.guo.mainitem._14animActivity">
    <ImageView
        android:id="@+id/ivAnim"
        android:src="@drawable/girl"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_anim"
        android:textSize="17dp"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:text="我最牽挂的還是困難群衆"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAnim1"
        android:text="按钮1"
        app:layout_constraintTop_toBottomOf="@id/ivAnim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAnim2"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAnim2"
        android:text="按钮2"
        app:layout_constraintTop_toBottomOf="@id/ivAnim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnAnim1"
        app:layout_constraintRight_toLeftOf="@+id/btnAnim3"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAnim3"
        android:text="按钮3"
        app:layout_constraintTop_toBottomOf="@id/ivAnim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnAnim2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
